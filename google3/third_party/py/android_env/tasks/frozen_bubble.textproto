# proto-file: google3/third_party/py/android_env/proto/task.proto
# proto-message: android_env.Task

id: "frozen_bubble"
name: "Frozen Bubble"
description: "Clear all the frozen bubbles."
package_name: "org.jfedor.frozenbubble"
full_activity_name: "org.jfedor.frozenbubble/.FrozenBubble"

setup_steps: [
  {
    adb_call: {
      install_apk: {
        apk_source: BUILT_INTERNALLY
        mpm: {
          package_name: "learning/deepmind/research/xgames/android/apks/frozen_bubble"
          label: "0.1"
          path: "2020.08.27-frozen-bubble-debug.apk"
        }
      }
    }
    success_condition: {
      check_install: {
        package_name: "org.jfedor.frozenbubble"
        timeout_sec: 10.0
      }
    }
  },
  { adb_call: { rotate: { orientation: PORTRAIT_0 } } }
]

reset_steps: [
  { adb_call: { force_stop: { package_name: "org.jfedor.frozenbubble" } } },
  { adb_call: { clear_cache: { package_name: "org.jfedor.frozenbubble" } } },
  {
    adb_call: {
      start_activity: {
        full_activity: "org.jfedor.frozenbubble/.FrozenBubble"
        extra_args: [
            "--ez", '"RL_TASK_ENABLED"', '"true"',
            "--es", '"RL_TASK_GAME_CONFIG"', '"{}"'
        ]
      }
    }
    success_condition: {
      wait_for_app_screen: {
        app_screen: {
          activity: "org.jfedor.frozenbubble/org.jfedor.frozenbubble.FrozenBubble"
          view_hierarchy_path: [
          ]
        }
        timeout_sec: 10.0
      }
      num_retries: 10
    }
  },
  {
    adb_call: {
      start_screen_pinning: {
        full_activity: "org.jfedor.frozenbubble/org.jfedor.frozenbubble.FrozenBubble"
      }
    }
  }
]

expected_app_screen: {
  activity: "org.jfedor.frozenbubble/org.jfedor.frozenbubble.FrozenBubble"
  view_hierarchy_path: [
  ]
}

max_duration_sec: 300  # 5 minutes.
