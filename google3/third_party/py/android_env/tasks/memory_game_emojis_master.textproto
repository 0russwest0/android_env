# proto-file: google3/third_party/py/android_env/proto/task.proto
# proto-message: android_env.Task

id: "memory_game_emojis_master"
name: "Memory Game - Emojis - Master"
description: "Simple memory game for kids 4+ age."
package_name: "com.snatik.matches"
full_activity_name: "com.snatik.matches/com.snatik.matches.MainActivity"

setup_steps: [
  {
    adb_call: {
      install_apk: {
        apk_source: BUILT_INTERNALLY
        mpm: {
          package_name: "learning/deepmind/research/xgames/android/apks/memory_game"
          label: "0.2"
          path: "2020.04.22-memory-game-debug.apk"
        }
      }
    }
    success_condition: {
      check_install: {
        package_name: "com.snatik.matches"
        timeout_sec: 10.0
      }
    }
  },
  { adb_call: { rotate: { orientation: LANDSCAPE_90 } } }
]

reset_steps: [
  { adb_call: { force_stop: { package_name: "com.snatik.matches" } } },
  { adb_call: { clear_cache: { package_name: "com.snatik.matches" } } },
  {
    adb_call: {
      start_activity: {
        full_activity: "com.snatik.matches/com.snatik.matches.MainActivity"
        extra_args: [
            "--ez", '"RL_TASK_ENABLED"', '"true"',
            "--es", '"RL_TASK_GAME_CONFIG"', '"{\\"theme\\":\\"emoji\\",\\"difficulty\\":6}"'
        ]
      }
    }
    success_condition: {
      wait_for_app_screen: {
        app_screen: {
          activity: "com.snatik.matches/com.snatik.matches.MainActivity"
          view_hierarchy_path: [
          ]
        }
        timeout_sec: 10.0
      }
      num_retries: 10
    }
  },
  {
    adb_call: {
      start_screen_pinning: {
        full_activity: "com.snatik.matches/com.snatik.matches.MainActivity"
      }
    }
  }
]

expected_app_screen: {
  activity: "com.snatik.matches/com.snatik.matches.MainActivity"
  view_hierarchy_path: [
  ]
}

max_duration_sec: 210  # 3 minutes 30 secondes (original game countdown)

extras_spec: [
  # Index of the flipped card
  { name: "flip" shape: [1], dtype: INT32 },
  # Number of cards to flip
  { name: "cards" shape: [1], dtype: INT32 },
  # Number of seconds remaining at the end of the game
  { name: "remained" shape: [1], dtype: INT32 },
  # Number of stars obtained at the end of the game
  { name: "stars" shape: [1], dtype: INT32 },
  # Acheived game score obtained at the end of the game
  { name: "achieved" shape: [1], dtype: INT32 }
]
