# proto-file: google3/third_party/py/android_env/proto/task.proto
# proto-message: android_env.Task

id: "minesweeper_hard"
name: "Minesweeper - Hard"
description: "The objective of the game is to clear a rectangular board containing hidden mines or bombs without detonating any of them, with help from clues about the number of neighboring mines in each field."
package_name: "org.secuso.privacyfriendlyminesweeper"
full_activity_name: "org.secuso.privacyfriendlyminesweeper/org.secuso.privacyfriendlyminesweeper.activities.SplashActivity"

setup_steps: [
  {
    adb_call: {
      install_apk: {
        apk_source: BUILT_INTERNALLY
        mpm: {
          package_name: "learning/deepmind/research/xgames/android/apks/minesweeper"
          label: "0.2"
          path: "2020.04.29-minesweeper-debug.apk"
        }
      }
    }
    success_condition: {
      check_install: {
        package_name: "org.secuso.privacyfriendlyminesweeper"
        timeout_sec: 10.0
      }
    }
  },
  { adb_call: { rotate: { orientation: PORTRAIT_0 } } }
]

reset_steps: [
  { adb_call: { force_stop: { package_name: "org.secuso.privacyfriendlyminesweeper" } } },
  { adb_call: { clear_cache: { package_name: "org.secuso.privacyfriendlyminesweeper" } } },
  {
    adb_call: {
      grant_permissions: {
        package_name: "org.secuso.privacyfriendlyminesweeper"
        permissions: "android.permission.ACCESS_COARSE_LOCATION"
      }
    }
  },
  {
    adb_call: {
      start_activity: {
        full_activity: "org.secuso.privacyfriendlyminesweeper/org.secuso.privacyfriendlyminesweeper.activities.SplashActivity"
        extra_args: [
            "--ez", '"RL_TASK_ENABLED"', '"true"',
            "--es", '"RL_TASK_GAME_CONFIG"', '"{\\"columns\\":12,\\"rows\\":19,\\"nrOfBombs\\":46}"'
        ]
      }
    }
    success_condition: {
      wait_for_app_screen: {
        app_screen: {
          activity: "org.secuso.privacyfriendlyminesweeper/org.secuso.privacyfriendlyminesweeper.activities.PlayActivity"
          view_hierarchy_path: [
          ]
        }
        timeout_sec: 10.0
      }
      num_retries: 10
    }
  },
  {
    adb_call: {
      start_screen_pinning: {
        full_activity: "org.secuso.privacyfriendlyminesweeper/org.secuso.privacyfriendlyminesweeper.activities.PlayActivity"
      }
    }
  }
]

expected_app_screen: {
  activity: "org.secuso.privacyfriendlyminesweeper/org.secuso.privacyfriendlyminesweeper.activities.PlayActivity"
  view_hierarchy_path: [
  ]
}

max_duration_sec: 300  # 5 minutes.

extras_spec: [
  # All of these a returned when the grid is changed
  # Number of hidden cells
  { name: "hidden" shape: [1], dtype: INT32 },
  # Number of revealed cells
  { name: "revealed" shape: [1], dtype: INT32 },
  # Number of bombs left
  { name: "bombs" shape: [1], dtype: INT32 },
  # The clicked cell [row, colummn]
  { name: "click" shape: [2], dtype: INT32 },
  # The mines grid: -1 = hidden, -2 = marked, 9 = bomb, 0-8 = number for nearby bombs
  { name: "grid" shape: [10, 6], dtype: INT32 }
]
