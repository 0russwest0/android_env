# proto-file: google3/third_party/py/android_env/proto/task.proto
# proto-message: android_env.Task

id: "open_sudoku_medium"
name: "Open Sudoku - Medium"
description: "Insert the numbers 1 to 9 into a grid consisting of 9 squares subdivided into a further 9 smaller squares in such a way that every number appears once in each horizontal line, vertical line, and square."
package_name: "org.moire.opensudoku"
full_activity_name: "org.moire.opensudoku/org.moire.opensudoku.gui.FolderListActivity"

setup_steps: [
  {
    adb_call: {
      install_apk: {
        apk_source: BUILT_INTERNALLY
        mpm: {
          package_name: "learning/deepmind/research/xgames/android/apks/open_sudoku"
          label: "0.3"
          path: "2020.02.18-open-sudoku-debug.apk"
        }
      }
    }
    success_condition: {
      check_install: {
        package_name: "org.moire.opensudoku"
        timeout_sec: 10.0
      }
    }
  },
  { adb_call: { rotate: { orientation: PORTRAIT_0 } } }
]

reset_steps: [
  { adb_call: { force_stop: { package_name: "org.moire.opensudoku" } } },
  { adb_call: { clear_cache: { package_name: "org.moire.opensudoku" } } },
  {
    adb_call: {
      start_activity: {
        full_activity: "org.moire.opensudoku/org.moire.opensudoku.gui.FolderListActivity"
        extra_args: [
            "--ez", '"RL_TASK_ENABLED"', '"true"',
            "--es", '"RL_TASK_GAME_CONFIG"', '"{\\"folder_id\\":2}"'
        ]
      }
    }
    success_condition: {
      wait_for_app_screen: {
        app_screen: {
          activity: "org.moire.opensudoku/org.moire.opensudoku.gui.SudokuPlayActivity"
          view_hierarchy_path: [
          ]
        }
        timeout_sec: 10.0
      }
      num_retries: 10
    }
  },
  {
    adb_call: {
      start_screen_pinning: {
        full_activity: "org.moire.opensudoku/org.moire.opensudoku.gui.SudokuPlayActivity"
      }
    }
  }
]

expected_app_screen: {
  activity: "org.moire.opensudoku/org.moire.opensudoku.gui.SudokuPlayActivity"
  view_hierarchy_path: [
  ]
}

max_duration_sec: 300  # 5 minutes.

extras_spec: [
  # Number pressed (between 1-9, 0 if the "delete" button is pressed)
  # Returned upon clicking the button
  { name: "value" shape: [1], dtype: INT32 }
]
