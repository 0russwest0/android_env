# proto-file: google3/third_party/py/android_env/proto/task.proto
# proto-message: android_env.Task

id: "rocket_sleigh_default"
name: "Rocket Sleigh - Default"
description: "Fly sleighs powered by rockets"
package_name: "com.google.android.apps.santatracker.rocketsleigh"
full_activity_name: "com.google.android.apps.santatracker.rocketsleigh/com.google.android.apps.santatracker.rocketsleigh.RocketSleighActivity"

setup_steps: [
  {
    adb_call: {
      install_apk: {
        apk_source: BUILT_INTERNALLY
        mpm: {
          package_name: "learning/deepmind/research/xgames/android/apks/rocket_sleigh"
          label: "5.4.3"
          path: "2020.06.03-rocket-sleigh-debug.apk"
        }
      }
    }
    success_condition: {
      check_install: {
        package_name: "com.google.android.apps.santatracker.rocketsleigh"
        timeout_sec: 10.0
      }
    }
  },
  { adb_call: { rotate: { orientation: PORTRAIT_0 } } }
]

reset_steps: [
  { adb_call: { force_stop: { package_name: "com.google.android.apps.santatracker.rocketsleigh" } } },
  { adb_call: { clear_cache: { package_name: "com.google.android.apps.santatracker.rocketsleigh" } } },
  {
    adb_call: {
      start_activity: {
        full_activity: "com.google.android.apps.santatracker.rocketsleigh/com.google.android.apps.santatracker.rocketsleigh.RocketSleighActivity"
        extra_args: [
            "--ez", '"RL_TASK_ENABLED"', '"true"',
            "--es", '"RL_TASK_GAME_CONFIG"', '"{}"'
        ]
      }
    }
    success_condition: {
      wait_for_app_screen: {
        app_screen: {
          activity: "com.google.android.apps.santatracker.rocketsleigh/com.google.android.apps.santatracker.rocketsleigh.RocketSleighActivity"
          view_hierarchy_path: [
          ]
        }
        timeout_sec: 10.0
      }
      num_retries: 10
    }
  },
  {
    adb_call: {
      start_screen_pinning: {
        full_activity: "com.google.android.apps.santatracker.rocketsleigh/com.google.android.apps.santatracker.rocketsleigh.RocketSleighActivity"
      }
    }
  }
]

expected_app_screen: {
  activity: "com.google.android.apps.santatracker.rocketsleigh/com.google.android.apps.santatracker.rocketsleigh.RocketSleighActivity"
  view_hierarchy_path: [
  ]
}

max_duration_sec: 300  # 5 minutes.
