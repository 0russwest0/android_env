# proto-file: google3/third_party/py/android_env/proto/task.proto
# proto-message: android_env.Task

id: "shattered_pixel_dungeon_mage"
name: "Shattered Pixel Dungeon - Mage"
description: "A Roguelike RPG, with randomly generated levels, items, enemies, and traps!"
package_name: "com.shatteredpixel.shatteredpixeldungeon.indev"
full_activity_name: "com.shatteredpixel.shatteredpixeldungeon.indev/com.shatteredpixel.shatteredpixeldungeon.android.AndroidLauncher"

setup_steps: [
  {
    adb_call: {
      install_apk: {
        apk_source: BUILT_INTERNALLY
        mpm: {
          package_name: "learning/deepmind/research/xgames/android/apks/shattered_pixel_dungeon"
          label: "0.2"
          path: "2020.05.08-shattered-pixel-dungeon-debug.apk"
        }
      }
    }
    success_condition: {
      check_install: {
        package_name: "com.shatteredpixel.shatteredpixeldungeon.indev"
        timeout_sec: 10.0
      }
    }
  },
  { adb_call: { rotate: { orientation: PORTRAIT_0 } } }
]

reset_steps: [
  { adb_call: { force_stop: { package_name: "com.tpcstld.twozerogame" } } },
  { adb_call: { clear_cache: { package_name: "com.tpcstld.twozerogame" } } },
  {
    adb_call: {
      start_activity: {
        full_activity: "com.shatteredpixel.shatteredpixeldungeon.indev/com.shatteredpixel.shatteredpixeldungeon.android.AndroidLauncher"
        extra_args: [
            "--ez", '"RL_TASK_ENABLED"', '"true"',
            "--es", '"RL_TASK_GAME_CONFIG"', '"{\\"hero\\":\\"mage\\"}"'
        ]
      }
    }
    success_condition: {
      wait_for_app_screen: {
        app_screen: {
          activity: "com.shatteredpixel.shatteredpixeldungeon.indev/com.shatteredpixel.shatteredpixeldungeon.android.AndroidGame"
          view_hierarchy_path: [
          ]
        }
        timeout_sec: 10.0
      }
      num_retries: 10
    }
  },
  {
    adb_call: {
      start_screen_pinning: {
        full_activity: "com.shatteredpixel.shatteredpixeldungeon.indev/com.shatteredpixel.shatteredpixeldungeon.android.AndroidGame"
      }
    }
  }
]

expected_app_screen: {
  activity: "com.shatteredpixel.shatteredpixeldungeon.indev/com.shatteredpixel.shatteredpixeldungeon.android.AndroidGame"
  view_hierarchy_path: [
  ]
}

max_duration_sec: 300  # 5 minutes.

extras_spec: [
  # All of these a returned when the hero does an action
  # The action name
  { name: "action" shape: [1], dtype: STRING_U16 },
  # The destination of the action
  { name: "dst" shape: [1], dtype: INT32 },
  # The leval reached
  { name: "level" shape: [1], dtype: INT32 },
  # The depth level reached
  { name: "depth" shape: [1], dtype: INT32 },
  # The deepest reached floor statistic
  { name: "deepestFloor" shape: [1], dtype: INT32 },
  # The gold level reached
  { name: "gold" shape: [1], dtype: INT32 },
  # The gold collected statistic
  { name: "goldCollected" shape: [1], dtype: INT32 }
]
