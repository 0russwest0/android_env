# proto-file: google3/third_party/py/android_env/proto/task.proto
# proto-message: android_env.Task

id: "ui_test_gesture_detector"
name: "UI Test Gesture Detector"
description: "Show touch pointer location on screen."
package_name: "com.example.uitest"
full_activity_name: "com.example.uitest/com.example.uitest.GestureDetectorActivity"

setup_steps: [
  {
    adb_call: {
      install_apk: {
        apk_source: FIRST_PARTY
        mpm: {
          package_name: "learning/deepmind/research/xgames/android/apks/ui_test"
          label: "1.0"
          path: "2020.04.08-ui-test-debug.apk"
        }
      }
    }
    success_condition: {
      check_install: {
        package_name: "com.example.uitest"
        timeout_sec: 10.0
      }
    }
  },
  { adb_call: { rotate: { orientation: PORTRAIT_0 } } }
]

reset_steps: [
  {
    adb_call: {
      start_activity: {
        full_activity: "com.example.uitest/com.example.uitest.GestureDetectorActivity"
        extra_args: [
            "--ez", '"RL_TASK_ENABLED"', '"true"',
            "--es", '"RL_TASK_GAME_CONFIG"', '"{}"'
        ]
      }
    }
    success_condition: {
      wait_for_app_screen: {
        app_screen: {
          activity: "com.example.uitest/com.example.uitest.GestureDetectorActivity"
          view_hierarchy_path: [
          ]
        }
        timeout_sec: 10.0
      }
    }
  },
  {
    adb_call: {
      start_screen_pinning: {
        full_activity: "com.example.uitest/com.example.uitest.GestureDetectorActivity"
      }
    }
  }
]

expected_app_screen: {
  activity: "com.example.uitest/com.example.uitest.GestureDetectorActivity"
  view_hierarchy_path: [
  ]
}

max_duration_sec: 60  # 1 minute.

extras_spec: [
  # All of these a returned when the screen is touched
  # Touch motion event action e.g. ['action']
  { name: "action" shape: [1], dtype: STRING_U1},
  # Gestures detected  e.g. ['fling']
  { name: "detected" shape: [1], dtype: STRING_U1},
  # Coordinates of the pointer [x, y] e.g. [123, 45]
  { name: "pointer" shape: [2], dtype: INT32 }
]
